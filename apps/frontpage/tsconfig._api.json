{
  "extends": "./.svelte-kit/tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "paths": {
      "$env/static/public": [
        "./.svelte-kit/output/lambdas/$env/static/public/index.js",
        "./.svelte-kit/generated/lambdas/$env/static/public/index.js"
      ],
      "$env/static/private": [
        "./.svelte-kit/output/lambdas/$env/static/private/index.js",
        "./.svelte-kit/generated/lambdas/$env/static/private/index.js"
      ],
      "~": [".."],
      "~/*": ["../*"],
      "$storefront": ["../src"],
      "$storefront/*": ["../src/*"],
      "$panda": ["../styled-system"],
      "$panda/*": ["../styled-system/*"],
      "$lib": ["./src/lib"],
      "$lib/*": ["./src/lib/*"]
    }
  },
  "include": [
    "*.d.ts",
    "**/*.d.ts",
    "./src/**/*.js",
    "./src/api/**/*.ts",
    "./src/lambdas/**/*.ts",
    "./src/utils/**/*.ts",
    "./dist/api/$env/**/*.ts",
    "../_shared/src/**/*.ts",
  ],
  "exclude": [
    "app.ts"
  ]
}
