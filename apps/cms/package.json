{
  "name": "@asecs/cms",
  "version": "1.0.0",
  "description": "A blank template to get started with Payload 3.0",
  "license": "MIT",
  "type": "module",
  "main": "index.js",
  "config": {
    "eslint_flags": "v10_config_lookup_from_file",
    "node_options": "--no-deprecation --max-old-space-size=8000 --experimental-transform-types --disable-warning=ExperimentalWarning"
  },
  "scripts": {
    "build": "npm run build:dev",
    "build:dev": "ESLINT_FLAGS=$npm_package_config_eslint_flags APP_ENV=dev NODE_OPTIONS=$npm_package_config_node_options next build && npx @agapi-development-tools/nextjs-aws-adapter pack",
    "pipeline:deploy:dev": "npm run build:dev && cross-env NODE_ENV=dev tsx ./stack/index.ts",
    "pipeline:deploy:stage": "npm run build:stage && cross-env NODE_ENV=stage tsx ./stack/index.ts",
    "pipeline:deploy:prod": "npm run build:prod && cross-env  NODE_ENV=prod cdk deploy --all --force --require-approval never",
    "deploy:dev": "npm run build:dev && cross-env NODE_ENV=dev tsx ./stack/index.ts",
    "deploy:stage": "npm run build:stage && cross-env NODE_ENV=stage tsx ./stack/index.ts",
    "deploy:prod:force": "npm run build:prod && cross-env NODE_ENV=prod tsx ./stack/index.ts",
    "dev": "cross-env NODE_OPTIONS=--no-deprecation next dev",
    "devsafe": "rm -rf .next && cross-env NODE_OPTIONS=--no-deprecation next dev",
    "start": "cross-env NODE_OPTIONS=--no-deprecation next start",
    "generate:importmap": "cross-env NODE_OPTIONS=--no-deprecation payload generate:importmap",
    "generate:types": "cross-env NODE_OPTIONS=--no-deprecation payload generate:types",
    "lint": "cross-env NODE_OPTIONS=--no-deprecation next lint"
  },
  "dependencies": {
    "@asecs/shared": "workspace:*",
    "@next/bundle-analyzer": "16.0.1",
    "@payloadcms/db-mongodb": "3.62.1",
    "@payloadcms/next": "3.62.1",
    "@payloadcms/payload-cloud": "3.62.1",
    "@payloadcms/richtext-lexical": "3.62.1",
    "@payloadcms/ui": "3.62.1",
    "cross-env": "10.1.0",
    "dotenv": "17.2.3",
    "graphql": "16.12.0",
    "next": "16.0.1",
    "payload": "3.62.1",
    "react": "19.2.0",
    "react-dom": "19.2.0"
  },
  "devDependencies": {
    "@agapi-development-tools/eslint-config": "workspace:*",
    "@agapi-development-tools/nextjs-aws-adapter": "workspace:*",
    "@agapi-development-tools/common-utilities": "workspace:*",
    "@aws-sdk/client-ec2": "3.919.0",
    "@aws-sdk/credential-providers": "3.919.0",
    "@types/node": "^22.5.4",
    "@types/react": "19.1.8",
    "@types/react-dom": "19.1.6",
    "@vitejs/plugin-react": "4.5.2",
    "@eslint/eslintrc": "3.3.1",
    "@next/bundle-analyzer": "16.0.1",
    "aws-cdk": "2.1031.0",
    "aws-cdk-lib": "2.221.0",
    "envalid": "8.1.0",
    "eslint": "^9.16.0",
    "eslint-config-next": "15.4.4",
    "jsdom": "26.1.0",
    "typescript": "5.7.3",
    "vite-tsconfig-paths": "5.1.4",
    "jiti": "2.6.1"
  }
}